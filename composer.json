{
    "name": "prestashop/prestashop",
    "description": "PrestaShop project",
    "license": "OSL-3.0",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "composer/installers": "^1.0 || ^2.0",
        "prestashop/autoloader": "^1.0",
        "prestashop/composer-registrar": "^1.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "preferred-install": "dist",
        "prepend-autoloader": false,
        "platform": {
            "php": "8.2"
        },
        "allow-plugins": {
            "composer/installers": true,
            "prestashop/composer-registrar": true,
            "prestashop/composer-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "PrestaShop\\PrestaShop\\": "src/"
        },
        "classmap": [
            "app/AppKernel.php",
            "app/AppCache.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "PrestaShop\\PrestaShop\\Composer\\ScriptHandler::install"
        ],
        "post-update-cmd": [
            "PrestaShop\\PrestaShop\\Composer\\ScriptHandler::install"
        ]
    }
}