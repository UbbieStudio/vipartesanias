{
    "name": "prestashop/prestashop",
    "description": "PrestaShop project",
    "license": "OSL-3.0",
    "type": "project",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packagist.org"
        }
    ],
    "require": {
        "php": ">=8.1",
        "prestashop/prestashop": "8.1.*",
        "composer/installers": "^1.0 || ^2.0"
    },
    "config": {
        "preferred-install": "dist",
        "prepend-autoloader": false,
        "platform": {
            "php": "8.2"
        },
        "allow-plugins": {
            "composer/installers": true,
            "prestashop/composer-registrar": true,
            "prestashop/composer-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "PrestaShop\\PrestaShop\\": "src/"
        },
        "classmap": [
            "app/AppKernel.php",
            "app/AppCache.php"
        ]
    },
    "minimum-stability": "stable"
}